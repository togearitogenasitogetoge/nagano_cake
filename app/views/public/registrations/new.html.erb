<div class="container">
  <div class="row">
    <div class="col">
      <br>
      <h3 class="text-center bg-secondary text-white col-3">新規会員登録</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
        <table class="table table-sm table-borderless">
          <tr>
            <td></td>
          </tr>
          <tr>
            <td></td>
          </tr>
          <tr>
            <td width="250"><%= f.label :名前 %></td>
            <td>(姓)</td>
            <td><%= f.text_field :family_name, autocomplete: "family_name" , placeholder: "令和", class:"form-control col-md-8" %></td>
            <td>(名)</td>
            <td><%= f.text_field :first_name, autocomplete: "first_name" , placeholder: "道子" , class:"form-control col-md-8" %></td>
          </tr>
          <tr>
            <td><%= f.label :フリガナ %></td>
            <td>(セイ)</td>
            <td><%= f.text_field :kana_family_name, autocomplete: "kana_family_name" , placeholder: "レイワ" , class:"form-control col-md-8" %></td>
            <td>(メイ)</td>
            <td><%= f.text_field :kana_first_name, autocomplete: "kana_first_name" , placeholder: "ミチコ" , class:"form-control col-md-8" %></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td></td>
            <td><%= f.email_field :email, autocomplete: "email" , placeholder: "sample@example.com" , class:"form-control col-md-8" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :郵便番号（ハイフンなし） %></td>
            <td></td>
            <td><%= f.text_field :postal_code, autocomplete: "postal_code" , placeholder: "0000000" , class:"form-control col-md-8" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :住所 %></td>
            <td></td>
            <td colspan="3"><%= f.text_field :address, autocomplete: "address" , :size=>"60" , placeholder: "東京都渋谷区代々木神園町0-0" , class:"form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :電話番号（ハイフンなし） %></td>
            <td></td>
            <td><%= f.text_field :phone_number, autocomplete: "postal_code" , placeholder: "0000000000" , class:"form-control col-md-8"%></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード（６文字以上）　%></td>
            <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password" , class:"form-control col-md-8" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード（確認用） %></td>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control col-md-8" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td><%= f.submit "新規登録" , class: "btn btn-primary btn-block" %></td>
            <td></td>
            <td></td>
          </tr>
        </table>
      <% end %>

         <h3 class="text-center bg-secondary text-white col-3">既に登録済みの方</h3>
      <p><%=link_to "こちら" , customer_session_path %>　からログインしてください。</P>
    </div>
  </div>
</div>
