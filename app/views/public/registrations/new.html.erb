<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    (姓)<%= f.text_field :family_name, autocomplete: "family_name" , placeholder: "令和" %>
    (名)<%= f.text_field :first_name, autocomplete: "first_name" , placeholder: "道子" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    (セイ)<%= f.text_field :kana_family_name, autocomplete: "kana_family_name" , placeholder: "レイワ" %>
    (メイ)<%= f.text_field :kana_first_name, autocomplete: "kana_first_name" , placeholder: "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autocomplete: "email" , placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autocomplete: "postal_code" , placeholder: "0000000" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autocomplete: "address" , :size=>"60" , placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autocomplete: "postal_code" , placeholder: "0000000000" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上）　%>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%#= render "public/shared/links" %>

<h2>既に登録済みの方</h2>
<%=link_to "こちら" , customer_session_path %>　からログインしてください。