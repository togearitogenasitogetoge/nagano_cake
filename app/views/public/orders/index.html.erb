<div class="container">
  <div class="row">
      <h4>注文履歴一覧</h4>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>請求金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%= order.created_at %></td>
              <td>
                <%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td><%= order.order_product %></td>
              <td><%= order.billing_amount %></td>
              <td><%= order.order_status %></td>
              <td>
                <div class="btn-wrapper col-10 mx-auto">
                  <div class="row">
                    <%= link_to "表示する", order_path(@order), class: "btn btn-info confirm" %>
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>
  </div>
</div>