<div class="container">
  <div class="row">
    <div class="col">
      <br><br>
      <h4 class="mt-2 p-2 text-center bg-secondary text-white col-md-3">注文履歴一覧</h4>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>請求金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_products.each do |order_product| %>
                <%= order_product.product.product_name %>
              <% end %>
            </td>
            <td><%= order.request_amount.to_s(:delimited) %>円</td>
            <td><%= order.order_status_i18n %></td>
            <td>
              <div class="btn-wrapper col-10 mx-auto">
                <div class="row">
                  <%= link_to "表示する", order_path(order), class: "btn btn-info confirm" %>
                </div>
              </div>
            </td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>