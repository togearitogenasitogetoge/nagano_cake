<div class="container">
  <div class="row">
    <h3>注文情報確認</h3><br>
    <%= form_with model: @order, url: orders_path, local:true do |f| %>
    <%= f.hidden_field :customer_id, value: current_customer.id %>
    <%= f.hidden_field :payment_method, value: @order.payment_method %>
    <%= f.hidden_field :order_status, value: @order.order_status %>
    <%= f.hidden_field :shipping_fee, value: 800 %>
    <%= f.hidden_field :request_amount, value: @order.request_amount %>
    <%= f.hidden_field :name, value: @order.name %>
    <%= f.hidden_field :postal_code, value: @order.postal_code %>
    <%= f.hidden_field :address, value: @order.address %>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_products.each do |cart_product| %>
          <tr>
            <td><%= cart_product.product.product_name %></td>
            <td><%= cart_product.product.tax_included_price.to_s(:delimited) %></td>
            <td><%= cart_product.quantity %></td>
            <td><%= cart_product.subtotal.to_s(:delimited)  %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>送料</th>
            <th>商品合計</th>
            <th>請求金額</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= "800円" %></td>
            <td><%= @total.round.to_s(:delimited) %></td>
            <td><%= @request_amount.round.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
      <h4>支払方法</h4>
      <%= @order.payment_method_i18n %><br>
      <h4>お届け先</h4>
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %><br>
      <div class="btn-wrapper col-10 mx-auto">
        <%= f.submit "注文を確定する", class: "btn btn-info create" %>
      </div>
    <% end %>
  </div>
</div>