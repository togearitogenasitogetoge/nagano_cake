<div class="container">
  <div class="row">
    <h3>注文情報確認</h3>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= "@order.product_id" %></td>
          <td><%= "@order.tax_included_price" %></td>
          <td><%= "@order.request_amount" %></td>
          <td><%= "@order.tax_included_price * @order.request_amount" %></td>
        </tr>
      </tbody>
    </table>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>送料</th>
          <th>商品合計</th>
          <th>請求金額</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= "@order.shipping_fee" %></td>
          <td><%= "@order.tax_included_price * @order.request_amount" %></td>
          <td><%= "@order.tax_included_price * @order.request_amount + @order.shipping_fee" %></td>
        </tr>
      </tbody>
    </table>
    <h4>支払方法</h4>
    <h4>お届け先</h4>
    <%= @delivery.address %>
    <div class="btn-wrapper col-10 mx-auto">
      <div class="row">
        <%= link_to "注文を確定する", orders_path method: :post class: "btn btn-info btn-block confirm" %>
      </div>
    </div>
  </div>
</div>