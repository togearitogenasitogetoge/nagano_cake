<div class="container">
  <div class="row">

    <%= form_with model: @order, url: confirm_orders_path, local:true do |f| %>
      <h4>支払方法</h4>
      <%= f.radio_button :payment_method, true, checked: true %>
      <%= f.label :payment_method, "クレジットカード" %><br>


      <%= f.radio_button :payment_method, false %>
      <%= f.label :payment_method, "銀行振込" %><br>

      <%= f.radio_button :delivery, "your_address" %>
      <%= f.label :delivery, "ご自身の住所" %><br>
      <%= "customer.postal_code %>
      <%= customer.address %><br>
      <%= customer.family_name %>
      <%= customer.first_name" %><br>

      <h4>お届け先</h4>
      <%= f.radio_button :delivery, "registered_address" %>
      <%= f.label :registered_address, "登録済住所から選択" %><br>
      <%= f.select :delivery_id, options_from_collection_for_select(Delivery.all, :id, :address_display) %><br>

      <%= f.radio_button :delivery, "new_address" %>
      <%= f.label :new_address, "新しいお届け先" %><br>

      <div class="form-group">
        <%= f.label :postal_code, "郵便番号" %>
        <%= f.text_field :postal_code, class: 'form-control order_address' %>

        <%= f.label :address, "住所" %>
        <%= f.text_area :address, class: 'form-control order_address' %>
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name, class: 'form-control order_address' %>
      </div>
      <div class="btn-wrapper col-10 mx-auto">
        <%= f.submit "確認画面へ進む", class: "btn btn-info btn-block confirm" %>
      </div>
    <% end %>
  </div>
</div>
