<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="mt-2 p-2 text-center bg-secondary text-white col-md-3">注文情報入力</h4>
      <%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
        <h6>支払方法</h6>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>

        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%><br>

        <h4>お届け先</h4>
          <%= f.radio_button :select_address, "0" %>
          <%= f.label :select_address, "ご自身の住所", value: 0 %><br>
          <%= @customer.postal_code %>
          <%= @customer.address %><br>
          <%= @customer.family_name %>
          <%= @customer.first_name %><br>

          <%= f.radio_button :select_address, "1" %>
          <%= f.label :select_address, "登録済住所から選択", value: 1 %><br>
          <%= f.select :delivery_id, options_from_collection_for_select(Delivery.all, :id, :address_display) %><br>

          <%= f.radio_button :select_address, "2" %>
          <%= f.label :select_address, "新しいお届け先", value: 2 %><br>
          <div class="form-group">
            <%= f.label :postal_code, "郵便番号" %>
            <%= f.text_field :postal_code, class: 'form-control order_address' %>
            <%= f.label :address, "住所" %>
            <%= f.text_area :address, class: 'form-control order_address' %>
            <%= f.label :name, "宛名" %>
            <%= f.text_field :name, class: 'form-control order_address' %>
          </div>
          <div class="btn-wrapper col-10 mx-auto">
            <%= f.submit "確認画面へ進む", class: "btn btn-info confirm" %>
          </div>
      <% end %>
    </div>
  </div>
</div>