      <div class="delivery">
        <h4>お届け先</h4><br>
          <input type="radio" value="your_address" name="delivery" id="your_address">
          <label style="display: inline-block;" for="your_address">ご自身の住所</label><br>
          <%= @customer.postal_code %>
          <%= @customer.address %><br>
          <%= @customer.family_name %>
          <%= @customer.first_name %><br>

          <input type="radio" value="registered_address" name="delivery" id="registered_address">
          <label style="display: inline-block;" for="registered_address">登録済住所から選択</label><br>
          <%= "f.collection_select :delivery_id, Delivery.all, :id, :postal_code, :address, :name"  %>

          <input type="radio" value="new_address" name="delivery" id="new_address">
          <label style="display: inline-block;" for="new_adress">新しいお届け先</label><br>


          <%= form_with model: @delivery, url: confirm_orders_path, local:true do |f| %>
            <div class="form-group">
              <h4>郵便番号</h4>
              <%= f.label :postal_code %>
              <%= f.text_field :postal_code, class: 'form-control order_address' %>
            </div>
            <div class="form-group">
              <h4>住所</h4>
              <%= f.label :address %>
              <%= f.text_area :address, class: 'form-control order_address' %>
            </div>
            <div class="form-group">
              <h4>宛名</h4>
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control order_address' %>
            </div>
            <div class="btn-wrapper col-10 mx-auto">
                <%= f.submit "確認画面へ進む", class: "btn btn-info btn-block confirm" %>
            </div>
          <% end %>
      </div>



  </div>
</div>