<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>

      <h3>注文履歴詳細</h3>

      <h4>注文情報</h4>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>支払方法</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= "@order.created_at" %></td>
            <td>
              <%= "@order.postal_code" %><br>
              <%= "@order.adress" %><br>
              <%= "@order.name" %>
            </td>
            <td><%= "@order.payment_method" %></td>
            <td><%= "@order.order_status" %></td>
          </tr>
        </tbody>
      </table>
      <h4>請求情報</h4>
      <!--confirmと重複-->
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品合計</th>
            <th>配送料</th>
            <th>ご請求額</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
            </td>
          </tr>
        </tbody>
      </table>
      <h4>注文内容</h4>
      <!--confirmと重複-->
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
            </td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>