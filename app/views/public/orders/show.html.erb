<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h3>注文履歴詳細</h3>

      <h4>注文情報</h4>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>支払方法</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                <%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
              <td><%= @order.payment_method_i18n %></td>
              <td><%= @order.order_status_i18n %></td>
            </tr>
          </tbody>
        </table>
        <h4>請求情報</h4>
        <!--confirmと重複-->
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order_products.each do |order_product| %>
            <tr>
              <td><%= order_product.product.product_name %></td>
              <td><%= order_product.product.tax_included_price.to_s(:delimited) %></td>
              <td><%= order_product.quantity %></td>
              <td><%= order_product.subtotal.to_s(:delimited)  %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>送料</th>
              <th>商品合計</th>
              <th>請求金額</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= "800円" %></td>
              <td><%= @total.round.to_s(:delimited) %></td>
              <td><%= @order.request_amount.round.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
        <h4>支払方法</h4>
        <%= @order.payment_method_i18n %><br>
        <h4>お届け先</h4>
        <%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %>
    </div>
  </div>
</div>