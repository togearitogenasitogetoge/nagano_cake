<div class="container">
  <duv class="row">
    <div class=" col-md-3">
      <h3>任意の</br>ジャンル検索</h3>
    </div>
    <div class="col-md-9">
      <h3>商品一覧（全<%= @products.count %>件）</h3>
      <% @products.each do |product| %>
        <div class="row row-cols-2 row-cols-md-4">
          <div class="card-deck" style="width:18rem">
            <div class="card">
              <div class="col-md-3">
              <!--image-->
              <%= link_to "詳細", product_path(product) %>
              <div class="card-body">
                <div class="card-title"><%= product.product_name %></div>
                <p class="card-text"><%= product.tax_included_price.to_s(:delimited) %></p>
              </div>
              </div>

            </div>
          </div>
        </div>
      <% end %>
    </div>
  </duv>
  <%= paginate @products %>
</div>