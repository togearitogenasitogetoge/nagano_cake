<div class="container">
  <div class="row">
    <h3 class="mt-5 p-2 text-center bg-secondary text-white col-md-4 offset-md-3">商品一覧（全<%= @products.count %>件）</h3>
  </div>

  <div class="row">
    <div class="col-3 mt-4">
      <%= render "public/genres/genre_lists", genres: @genres %>
    </div>
    <div class="col-9 mt-4">
        <div class="row row-cols-1 row-cols-md-4 g-3">
          <% @products.each do |product| %>
          <div class="col mb-4">
          <div class="card w-100 border-0" style="width: 20rem">
            <div class="card-body">
             <%= link_to product_path(product) do %><%= image_tag product.get_image, size:'100x100', class:"card-img-top" %>
              <div class="card-title"><%= product.product_name %>
              <% end %>
              </div>
              <p class="card-text"><%= product.tax_included_price.to_s(:delimited) %>円</p>
            </div>
          </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  <%= paginate @products %>
</div>
