<h2>会員情報編集</h2>

<%= form_with model: @customer do |f| %>

  <div class="field">
    <%= f.label :氏名 %>
    <%= f.text_field :family_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :kana_family_name %>
    <%= f.text_field :kana_first_name %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :住所%>
    <%= f.text_field :address , :size=>"60"  %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>

  <div class="action">
    <%= f.submit "編集内容を保存" %>
  </div>

<% end %>