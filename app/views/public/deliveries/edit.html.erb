<div class="container">
  <h3 class="p-2 mb-3 bg-secondary text-white col-3">配送先編集</h3>
      <%= form_with model: @delivery do |f| %>
        <div class="form-group row">
          <%= f.label :postal_code, '郵便番号（ハイフンなし）', class:"col-sm-3 col-form-label" %>
          <%= f.text_field :postal_code, class:"form-control col-lg-2" %>
        </div>
        <div class="form-group row">
          <%= f.label :adress, '住所', class:"col-sm-3 col-form-label"%>
          <%= f.text_field :address, class:"form-control col-lg-7" %>
        </div>
        <div class="form-group row">
          <%= f.label :name, '宛名', class:"col-sm-3 col-form-label" %>
          <%= f.text_field :name, class:"form-control col-lg-2" %>
          <%= f.submit '変更内容を保存', class:"btn btn-success ml-auto col-lg-1" %>
          </div>
      <% end %>
  </div>

