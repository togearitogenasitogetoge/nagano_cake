<div class="container">
    <h4 class="mt-2 p-2 text-center bg-secondary text-white col-md-3">配送先編集</h4>

      <%= form_with model: @delivery do |f| %>
      <%= render "public/shared/error_messages", resource: @delivery %>
      <table class="table table-sm table-borderless">
        <tr>
          <td><%= f.label :postal_code, '郵便番号（ハイフンなし）' %></td>
          <td ><%= f.text_field :postal_code, class:"form-control col-lg-4", :placeholder => "0000000" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :address, '住所' %></td>
          <td colspan="3"><%= f.text_field :address, class:"form-control", :placeholder =>'東京都渋谷区代々木神園町0－0' %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :name, '宛名' %></td>
          <td><%= f.text_field :name, class:"form-control col-lg-4", :placeholder =>'令和道子' %></td>
          <td><%= f.submit '変更を保存', class:"btn btn-success ml-auto" %></td>
        </tr>
       </table>
          <% end %>
