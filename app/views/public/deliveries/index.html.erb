<div class="container">
  <div class="mt-2 p-2 text-center bg-secondary text-white col-3">
    <h4>配送先登録/一覧</h4>
  </div>
      <%= form_with model: @delivery do |f| %>
        <div class="form-group row">
          <%= f.label :postal_code, '郵便番号（ハイフンなし）', class:"col-sm-3 col-form-label" %>
          <%= f.text_field :postal_code, class:"form-control col-lg-2", :placeholder => "0000000" %>
        </div>
        <div class="form-group row">
          <%= f.label :address, '住所', class:"col-sm-3 col-form-label"%>
          <%= f.text_field :address, class:"form-control col-lg-7", :placeholder =>'東京都渋谷区代々木神園町0－0' %>
        </div>
        <div class="form-group row">
          <%= f.label :name, '宛名', class:"col-sm-3 col-form-label" %>
          <%= f.text_field :name, class:"form-control col-lg-2", :placeholder =>'令和道子' %>
          <%= f.submit '新規登録', class:"btn btn-success ml-auto col-lg-1" %>
          </div>
      <% end %>

      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @deliveries.each do |delivery| %>
          <tr>
          <td><%= delivery.postal_code %></td>
			    <td><%= delivery.address %></td>
		    	<td><%= delivery.name %></td>
		    	<td><%= link_to  "編集する", edit_delivery_path(delivery.id), class:"btn btn-sm btn-success" %>
		    	    <%= link_to  "削除する", delivery_path(delivery), method: :delete, class:"btn btn-sm btn-danger", "data-confirm"=>"本当に消しますか？"%>
		    	</td>
		      </tr>
		      <% end %>
         </tbody>
      </table>
  </div>
