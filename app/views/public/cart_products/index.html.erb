<div class="container">
  <div class="mt-2 p-2 text-center bg-secondary text-white col-3">
  <h4>ショッピングカート</h4>
  </div>

    <div class="float-right mb-3">
      <%= link_to "カートを空にする", cart_products_destroy_all_path, method: :delete, class: "btn btn-sm btn-danger" %>
    </div>

  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th>商品名</th>
        <th>単価（税込み）</th>
        <th>数量</th>
        <th>小計</th>
        <th colspan="1"></th>
      </tr>
    </thead>
     
      <tbody> 
      <% @cart_products.each do |cart_product| %>
        <tr>
          <!--<td><=image_tag cart_product.product.product_image, size:"80×80" %>-->
          <td><%= cart_product.product.product_name %></td>
			    <td><%= cart_product.product.tax_included_price.to_s(:delimited) %></td>
			    <td><%= form_with model: cart_product, url: cart_product_path(cart_product), method: :patch do |f| %>
			        <%= f.select :quantity, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]] %>
			        <%= f.submit '変更', class:"btn btn-success" %>
			        <% end %>
			    </td>
			    <td><%= cart_product.subtotal.to_s(:delimited) %></td>
			    <td><%= link_to "削除する", cart_product_path(cart_product), method: :delete, class: "btn btn-sm btn-danger" %></td>
  　   </tbody>
  　 <% end %>
    </table>
    <table class="table table-bordered">
      　   <td class=""><%= link_to "買い物を続ける", products_path, class: "btn btn-sm btn-primary" %></td>
  　       <td bgcolor="#e9ecef">合計金額</td>
  　       <td><%= @total.round.to_s(:delimited)%></td>
    </table>
    <div class="row justify-content-center"><%= link_to "入力情報に進む", new_order_path, class: "btn btn-sm btn-primary" %></div>
</div>
