<div class="container">
  <%= flash[:notice] %>
  <div class="row mt-4">
    <h4 class="mt-2 p-2 text-center bg-secondary text-white col-md-3">ジャンル一覧・追加</h4>
    </div>
      <div class="form-group col-md-10">
        <%= form_with model: @genre, url:'/admin/genres' do |f| %>
        <%= render "public/shared/error_messages", resource: @genre %>
        <h4 class="d-inline-block mt-4 mx-4">ジャンル名</h4>
         <p class="d-inline-block mx-4"><%= f.text_field :genre_name, placeholder:"ジャンル名" , class: "form-control" %></p>
         <p class="d-inline-block mx-4"><%= f.submit '新規登録', class: "btn btn-success" %></p>
      </div>
    <% end %>


    <table  class="table border-dark col-md-4">
      <thead class="thead-light">
        <tr>
          <th class="table-active col-md-7">ジャンル</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
　  　<% @genres.each do |genre| %>
　  　<tr>
　  　  <td><%= genre.genre_name %></td>
　  　  <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
　  　</tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

