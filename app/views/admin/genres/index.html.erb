<div class="container">
  <div class="row m-4">
    <div class="mt-2 p-2 text-center bg-secondary text-white col-3">
    <h4>ジャンル一覧・追加</h4>
    </div>
      <div class="form-group col-md-10">
        <%= form_with model: @genre, url:'/admin/genres' do |f| %>
        <lavel>ジャンル名</lavel>
         <%= f.text_field :genre_name, placeholder:"ジャンル名" %>
         <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    <% end %>


    <table class = "table hover">
      <thead class="thead-light">
        <tr>
          <th class="text-center">ジャンル</th>
           <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
　  　<% @genres.each do |genre| %>
　  　<tr>
　  　  <td style="width:20%"><%= genre.genre_name %></td>
　  　  <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
　  　</tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

