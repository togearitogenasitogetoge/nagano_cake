      <%= f.label :adress, '住所' %>
      <%= f.text_field :adress %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :phone_number, '電話番号' %>
      <%= f.text_field :phone_number %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email %>
    </div>
    <div class="form-group col-md-6">
      <%=  会員ステータス %>
      <%= form.radio_button :, :male, checked: true %>
    </div>



