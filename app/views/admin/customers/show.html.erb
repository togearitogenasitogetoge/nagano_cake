
<div class="container">
  <h4 class="mt-2 p-2 text-center bg-secondary text-white col-sm-5"><%= @customer.full_name %>さんの会員詳細</h4>

<table class="table table-borderless col-6">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
          <td></td>
        </tr>
        <tr>
          <th>氏名</th>
			    <td><%= @customer.full_name %></td>
			    <td></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.kana_full_name %></td>
		    </tr>
		    <tr>
		      <th>郵便番号</th>
		      <td><%= @customer.postal_code %></td>
		      <td></td>
		    </tr>
		    <tr>
		      <th>住所</th>
		      <td><%= @customer.address %>
		    </tr>
		    <tr>
		      <th>電話番号</th>
		      <td><%= @customer.phone_number %></td>
		      <td></td>
		    </tr>
		    <tr>
		      <th>メールアドレス</th>
		      <td><%= @customer.email %></td>
		      <td></td>
		    </tr>
		    <tr>
		      <th>会員ステータス</th>
		      <td><% if @customer.customer_status == true %>
              <p class="text-success font-weight-bold">有効</p>
              <% else %>
              <p class="text-secondary font-weight-bold">退会</p>
              <% end %>
          </td>
          <td></td>
		    </tr>
		    <tr>
		      <th></th>
		      <td><%= link_to  "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-sm btn-success" %></td>
		      <td><%= link_to  "注文履歴一覧を見る", admins_path, class:"btn btn-sm btn-primary" %><td>
      </tbody>
  </table>
</div>