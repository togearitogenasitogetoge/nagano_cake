<div class="container">
  <div class="row">
    <div class="col centor-block">
      <br></br>
        <h3 class="mt-2 p-2 text-center bg-secondary text-white col-md-3">管理者ログイン</h3>
                <br></br>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <table class="table table-borderless table-sm">
                  <tr>
                    <td class="col-md-2 col-md-offset-5"></td>
                    <td class="col-md-2 col-md-offset-5"></td>
                    <td></td>
                    <td class="col-md-5 col-md-offset-5"></td>
                  </tr>
                  <tr>
                    <td></td>
                    <td><%= f.label :メールアドレス %></td>
                    <td class="form-group"><%= f.email_field :email, autofocus: true, autocomplete: "email" , :size=>"50" , placeholder: "sample@example.com" , class:"form-control"  %></td>
                  </tr>
                  <tr>
                    <td></td>
                    <td><%= f.label :パスワード %></td>
                    <td class="form-control"><%= f.password_field :password, autocomplete: "current-password" , :size=>"50", class:"form-control" %></td>
                  </tr>
                  <tr>
                    <td></td>
                  </tr>
                  <tr>
                    <td></td>
                  </tr>
                  <tr>
                    <td colspan="2"></td>
                    <td>
                      <div class="actions">
                      <%= f.submit "ログイン" , class: "btn btn-primary btn-block" %>
                      </div>
                    </td>
                    <td></td>
                 </table>
        <% end %>
   </div>
 </div>
</div>

<%#= render "admin/shared/links" %>
