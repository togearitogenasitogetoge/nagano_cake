<div class="container">
  <div class="row">
    <div class="mt-2 p-2 text-center bg-secondary text-white col-3">
      <h2>商品編集</h2>
    </div>
  </div>
  <div class="row"></div>
    <%= render "public/shared/error_messages", resource: @product %>
    <div class="col-md-12 mt-5 mx-15">
      <%= form_with model: @product, url: admin_product_path, method: :patch do |f| %>
      <table>
        <tr>
            <th>商品画像</th>
            <td><%= f.file_field :product_image %></td>
        </tr>

         <tr>
            <th>商品名</th>
            <td><%= f.text_field :product_name %></td>
        </tr>

         <tr>
            <th>商品説明</th>
            <td><%= f.text_area :product_description %></td>
        </tr>

         <tr>
            <th>ジャンル</th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name %></td>
        </tr>

         <tr>
            <th>税抜価格</th>
            <td><%= f.text_field :tax_excluded_price %>円</td>
        </tr>

         <tr>
            <th>販売ステータス</th>
            <td><%= f.radio_button :sales_status, true, checked: true %>
      　　　　　　　　<%= f.label :sales_status, "販売中" %>
　　　　　　　　<%= f.radio_button :sales_status, false %>
　　　　　　　　<%= f.label :sales_status, "販売停止中" %>
　　　　　　</td>
        </tr>

        <tr>
          <div class="mt-2">
            <th><%= f.submit "変更を保存", class: "btn btn-success" %></th>
          </div>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


