<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h2>商品新規登録</h2>
    </div>
  </div>

  <div class="row">
    <div class="col_md-10">
      <%= form_with model: @product, url: admin_products_path, method: :post do |f| %>
      <table>

        <tr>
          <div class ="new-image">
            <th>商品画像</th>
            <th><%= f.file_field :product_image %></th>
          </div>
        </tr>

        <tr>
          <div class="new-form">
            <th>商品名</th>
            <td><%= f.text_field :product_name, placeholder:"商品名" %></td>
          </div>
        </tr>

        <tr>
          <div class="new-form">
            <th>商品説明</th>
            <td><%= f.text_area :product_description, size: "50x10", placeholder:"ここに説明文を記述します" %></td>
          </div>
        </tr>

        <tr>
          <div class="new-form">
            <th>ジャンル</th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name, :prompt => "--選択してください--" %></td>
          </div>
        </tr>

        <tr>
          <div class="new-form">
            <th>税抜価格</th>
            <td><%= f.text_field :tax_excluded_price, placeholder:"1000" %>円</td>
          </div>
        </tr>

        <tr>
          <div class="new-form">
            <th>販売ステータス</th>
            <td><%= f.radio_button :sales_status, true, checked: true %>
                <%= f.label :sales_status, "販売中" %>
　　　　　      <%= f.radio_button :sales_status, false %>
　　　　　      <%= f.label :sales_status, "販売停止中" %>
　　　　　  </td>
　　　　  </div>
　　　　</tr>

　　　　<tr>
          <div class="commit">
            <th><%= f.submit '新規登録', class: "btn btn-success" %></th>
          </div>
        </tr>
　　　  <% end %>
　　　</table>
　　</div>
　</div>
</div>

