<div class="container">
  <div class="row m-4">
    <h2>商品新規登録</h2>
      <%= form_with model: @product, url: admin_products_path, method: :post do |f| %>
      <div class="col-xs-8">

        <div class ="new-image">
          <label>商品画像</label>
        <%= f.file_field :product_image %>
        </div>
        <div class="new-form">
          <label>商品名</label>
          <%= f.text_field :product_name %>
        </div>

        <div class="new-form">
          <label>商品説明</label>
           <%= f.text_area :product_description %>
        </div>

        <div class="new-form">
          <label>ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>
        </div>

        <div class="new-form">
          <label>税抜価格</label>
           <%= f.text_field :tax_excluded_price %>円
        </div>

        <div class="new-form">
          <label>販売ステータス</label>
          <%= f.select :sales_status, ["販売中", "販売停止中"] ,class: "btn btn-primary"%>
        </div>

        <div class="commit">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
　　　  <% end %>
　　　</div>
　</div>
</div>

