<div class="contaier">
  <h2>商品詳細</h2>
    <div class="row">
      <div class="col-md-2">
        <!--image-->
      </div>
    </div>

    <div class="row">
    　<table>

        <tr>
          <th>商品名</th>
          <td><%= @product.product_name %></td>
        </tr>

        <tr>
          <th>商品説明</th>
          <td><%= @product.product_description %></td>
        </tr>

        <tr>
          <th>ジャンル</th>
          <td><%= @product.genre.genre_name %></td>
        </tr>

        <tr>
          <th>税込価格（税抜価格）</th>
          <td><%= @product.tax_included_price.to_s(:delimited) %>　(<%= @product.tax_excluded_price %>) 円</td>
        </tr>

        <tr>
          <th>販売ステータス</th>
          <td><% if @product.sales_status == true %>
 　   　　　  　　 <p class="text-success ">販売中</p>
  　　　　　 　　　　<% else %>
  　　　　　　　　　　　<p class="text-secondary ">販売停止中</p>
              <% end %>
　　　　　</td>
        </tr>
       </table>

      <div class="edit-form">
        <p><%= link_to '編集する',edit_admin_product_path(@product.id) %></p>
      </div>
    </div>
</div>


