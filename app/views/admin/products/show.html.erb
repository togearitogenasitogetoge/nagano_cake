<div class="container">
  <%= flash[:notice] %>
  <h4 class="mt-2 p-2 text-center bg-secondary text-white col-md-3">商品詳細</h4>
  <div class="row">
    <div class="col-md-5 mt-5">
      <%= image_tag @product.get_image, size:'100x300', class:"card-img-top" %>
    </div>

    <div class="col-md-7 mt-5">
      <table class="table table-borderless h6">
        <tr>
          <th>商品名</th>
          <td><%= @product.product_name %></td>
        </tr>

        <tr>
          <th>商品説明</th>
          <td><%= @product.product_description %></td>
        </tr>

        <tr>
          <th>ジャンル</th>
          <td><%= @product.genre.genre_name %></td>
        </tr>

        <tr>
          <th>税込価格<br />(税抜価格）</th>
          <td><%= @product.tax_included_price.to_s(:delimited) %> 円<br />(<%= @product.tax_excluded_price.to_s(:delimited) %>) 円</td>
        </tr>

        <tr>
          <th>販売ステータス</th>
          <td><% if @product.sales_status == true %>
 　   　      　 <p class="text-success ">販売中</p>
  　　　  　 　　　<% else %>
  　　　　　   　　　　<p class="text-secondary ">販売停止中</p>
              <% end %>
　　　　　</td>
        </tr>
      </table>
      
    </div>
  </div>

  <div class="text-center">
    <%= link_to '編集する',edit_admin_product_path(@product.id), class: "btn btn-success" %>
  </div>
</div>


