<div class="container">
    <div class="row">
        <div class="col">
            <h1>注文履歴詳細</h1>

            <table class="table">
                <thead>
                   <tr>
                    <td></td>
                    <td></td>
                   </tr>
                </thead>
                <tbody>
                    <tr>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>購入者</td>
                    <td><%= @order.name %></td>
                </tr>
                <tr>
                    <td>注文日</td>
                    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                </tr>
                <tr>
                    <td>配送先</td>
                    <td>〒<%= @order.postal_code %><%= @order.address %></td>
                </tr>
                <tr>
                    <td>支払方法</td>
                    <td><%= @order.payment_method_i18n %></td>
                </tr>
                <tr>
                    <td>注文ステータス</td>
                    <td>
                        <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
                        <%= f.select :order_status, Order.order_statuses_i18n.invert, class: "order_status" %>
                        <%= f.submit "更新" , class: "btn btn-outline-success" %>
                        <% end %>
                    </td>
                </tr>
            </table>
            <table>
                <tr>
                    <td>商品名</td>
                    <td>単価(税込)</td>
                    <td>数量</td>
                    <td>小計</td>
                    <td>制作ステータス</td>
                </tr>
                <% @order_product.each do |order_product| %>
                <tr>
                    <td><%= order_product.product.product_name %></td>
                    <td><%= order_product.tax_included_price.to_s(:delimited) %></td>
                    <td><%= order_product.quantity %></td>
                    <td><%= order_product.subtotal.to_s(:delimited) %></td>
                    <td>
                        <%= form_with model: order_product, url:admin_order_product_path , method: :patch, local: true do |f| %>
                          <%= f.select :work_status, OrderProduct.work_statuses.keys,class: "work_status" %>
                          <%= f.submit "更新" , class: "btn btn-outline-success" %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
                <tr>
                    <td>商品合計</td>
                    <td><%#= @total.round.to_s(:delimited) %></td>
                </tr>
                <tr>
                    <td>送料</td>
                    <td>800円</td>
                </tr>
                <tr>
                    <td>請求金額合計</td>
                    <td><%#= @order.request_amount.round.to_s(:delimited) %></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

