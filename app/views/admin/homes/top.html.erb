<div class="container">
  <div class="row">
      <h4>注文履歴一覧</h4>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= order.customer %></td>
              <td><%= order.request_amount %></td>
              <td><%= order.order_status %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
  </div>
</div>


